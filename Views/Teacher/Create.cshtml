@model TeacherData
@{
    Layout = "_DashLayout";
}
<div class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Menambah Data Guru</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Teacher" asp-action="Create">
                        <div class="col-md-3 px-md-1">
                            <div class="form-group">
                                <label asp-for="Nama">Nama</label>
                                <input type="text" class="form-control" asp-for="Nama">
                            </div>
                        </div>
                        <div class="col-md-3 px-md-1">
                            <div class="form-group">
                                <label asp-for="NUPTK">NUPTK</label>
                                <input type="text" class="form-control" asp-for="NUPTK">
                            </div>
                        </div>
                        <div class="col-md-3 px-md-1">
                            <div class="form-group">
                                <label asp-for="Mata_Pelajaran">Mata Pelajaran</label>
                                <input type="text" class="form-control" asp-for="Mata_Pelajaran">
                            </div>
                        </div>

                        <div class="card-footer">
                            <input type="submit" class="btn btn-fill btn-primary" value="Simpan" />
                        </div>
                        <div class="card-footer">
                            <input type="button" class="btn btn-fill btn-primary" value="Batal" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
</div>
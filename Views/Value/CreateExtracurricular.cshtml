@model Extracurricular
@{
    Layout = "_DashLayout";
}
<div class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Menambah Data Siswa</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Value" asp-action="CreateExtracurricular">
                        <div class="col-md-3 px-md-1">
                            <div class="form-group">
                                <label asp-for="NIS">NIS</label>
                                <input type="text" class="form-control" asp-for="NIS">
                            </div>
                        </div>
                        <div class="col-md-3 px-md-1">
                            <div class="form-group">
                                <label asp-for="Nama">Nama</label>
                                <input type="text" class="form-control" asp-for="Nama">
                            </div>
                        </div>
                        <div class="col-md-3 px-md-1">
                            <div class="form-group">
                                <label asp-for="Ekstrakurikuler">Ekstrakurikuler</label>
                                <input type="text" class="form-control" asp-for="Ekstrakurikuler">
                            </div>
                        </div>
                        <div class="col-md-3 px-md-1">
                            <div class="form-group">
                                <label asp-for="Grade">Grade</label>
                                <input type="text" class="form-control" asp-for="Grade">
                            </div>
                        </div>

                        <div class="card-footer">
                            <input type="submit" class="btn btn-fill btn-primary" value="Simpan" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
</div>